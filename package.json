{
  "name": "vat-validator",
  "version": "1.0.0",
  "description": "A package for validating VAT numbers",
  "scripts": {
    "dev": "concurrently \"npm run build -- --watch\" \"npm test\"",
    "build": "tsup --onSuccess \"yalc publish && npm link && npm run doc\"",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"{src,test}/**/*.+(ts|js)\"",
    "lint:fix": "npm run lint -- --fix && prettier --write .",
    "test": "jest",
    "test:ci": "jest --coverage",
    "prepare": "husky install",
    "commit": "cz",
    "release": "npm run build && npm run release-it",
    "doc": "tsdoc --src=src/*"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": "inline",
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "injectStyle": false
  },
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "./{src,tests}/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix"
    ],
    "*": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "vat",
    "validator",
    "validation",
    "typescript",
    "npm",
    "package"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaopfg/vat-validator.git"
  },
  "author": "joaopfg",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/joaopfg/vat-validator/issues"
  },
  "homepage": "https://github.com/joaopfg/vat-validator#readme",
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@ryansonshine/commitizen": "4.2.8",
    "@ryansonshine/cz-conventional-changelog": "3.3.4",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "babel-loader": "9.1.3",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-sort-class-members": "1.19.0",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "release-it": "17.2.0",
    "tsdoc-markdown": "0.5.0",
    "tsup": "8.0.2",
    "yalc": "1.0.0-pre.53"
  }
}
